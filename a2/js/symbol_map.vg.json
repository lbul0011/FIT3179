{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 675,
  "title":{"text": "Annual passenger count for Victorian train stations (2024)","offset": -60, "fontSize": 20},
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "data/test_3.json",
        "format": {"type": "topojson", "feature": "SAL_2021_AUST_GDA2020"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "data/annual_metropolitan_train_station_entries_fy_2024_2025.csv"
      },
      "mark": {"type": "circle", "color":"red","opacity":0.4,"stroke":"black","strokeWidth":0.8},
      "encoding": {
        "longitude": {"field": "Stop_long", "type": "quantitative"},
        "latitude": {"field": "Stop_lat", "type": "quantitative"},
        "size": {
          "field": "Pax_annual",
          "type": "quantitative",
          "title": "Annual passenger count",
          "scale": {
            "type": "threshold",
            "domain": [100000,250000,500000,1000000, 10000000],    
            "range": [15,30,50,85,150,200]       
          },
          "legend": {
            "title": "Passengers",
            "format": ",",
            "offset": -70,
            "orient": "bottom",
            "direction": "horizontal",
            "titleAnchor": "middle"

          }
          
        },
        "tooltip": [
          {"field": "Stop_name","title": "Station: "},
          {"field": "Pax_annual","title": "Annual passenger count: ","format":","}
        ]

      }
    },

    {
      "data": {
        "url": "data/test_3.json",
        "format": {"type": "topojson", "feature": "au_eez_pol_april2022"}
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 1,
        "fillOpacity": 0.6
      }
    
    }
  ]
}